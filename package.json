{
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "html"
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "build": "postcss styles.css -o src/styles.css",
    "dev": "concurrently \"npm run build && live-server src --port=8080\" \"npm run watch\""
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "daisyui": "^4.12.10",
    "tailwindcss": "^3.4.10"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "npm-watch": "^0.13.0",
    "postcss-cli": "^11.0.0"
  }
}
